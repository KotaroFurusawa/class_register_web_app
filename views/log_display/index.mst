<!DOCTYPE html>
<html lang="ja">

<head>
    <title>実行ログ/一括教室申請</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script type="text/javascript">
        // 最初の実行
        let id = {{id}};
        const URL = location.protocol + '//' + location.host;
        fetch_log();

        //ログアウト
        document.getElementById("logout").addEventListener("click", logout);
        //ホームに戻る
        document.getElementById("back_home").addEventListener("click", back_home);

        async function logout() {
            window.location.href = URL + '/logout';
        }
        async function back_home() {
            window.location.href = URL + '/home';
        }

        function fetch_log() {
            // ここに定期的に行なう処理を書く
            var xhr = new XMLHttpRequest();
            xhr.open("GET", `${URL}/fetch_log?id=${id}`, true);
            xhr.onload = function (e) {
                if (xhr.readyState === 4) {
                    if (xhr.status === 200) {
                        document.getElementById('console').innerHTML = xhr.responseText;
                    } else {
                        console.error(xhr.statusText);
                    }
                }
            };
            xhr.onerror = function (e) {
                console.error(xhr.statusText);
            };
            xhr.send();
            // 1秒ごとに実行
            window.setTimeout("fetch_log()", 5000);
        }
    </script>
</head>

<body class="bg-dark">
    <div class="container">
        <div class="main container-fluid">
            <div class="row bg-light text-dark py-5">
                <div class="col-md-8 offset-md-2">
                    <h2 class="fs-1 mb-5 text-center fw-bold">一括申請実行ログ</h2>
                    <div class="bg-dark">
                        <br>
                        <div id="console">
                        </div>
                        <br>
                    </div>
                    <div id="trance" class="mb-3">
                        <div class="d-flex justify-content-around m-2">
                            <input class="btn btn-secondary" id="back_home" type="button" value="ホームに戻る" />
                            <input class="btn btn-primary" id="logout" type="button" value=" ログアウト " />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>